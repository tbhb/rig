          "(create|add|define).*?(just )?recipe",
          "(setup|configure).*?(automation|workflow|tasks)",
          "(automate|automation).*?(build|test|deploy)",
          "just.*?(command|recipe|variable|setup)"
        ]
      },
      "fileTriggers": {
        "paths": ["**/justfile", "**/Justfile", "**/.justfile"]
      }
    },
