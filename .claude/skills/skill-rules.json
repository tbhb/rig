{
  "version": "1.0.0",
  "skills": {
    "skill-developer": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "high",
      "description": "Meta-skill for creating and managing Claude Code skills",
      "promptTriggers": {
        "keywords": [
          "skill system",
          "create skill",
          "add skill",
          "skill triggers",
          "skill rules",
          "hook system",
          "skill development",
          "skill-rules.json"
        ],
        "intentPatterns": [
          "(how do|how does|explain).*?skill",
          "(create|add|modify|update|build).*?skill",
          "skill.*?(work|trigger|activate|system)"
        ]
      }
    },
    "python-dev-practices": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "high",
      "description": "Python development best practices for modern Python projects",
      "promptTriggers": {
        "keywords": [
          "python",
          "setup.py",
          "pyproject.toml",
          "pytest",
          "type hints",
          "python imports",
          "python error",
          "python class",
          "python module",
          "python testing"
        ],
        "intentPatterns": [
          "(create|write|implement).*?python",
          "python.*?(code|file|script|module)",
          "(test|testing).*?python",
          "(hook|hooks).*?(implement|create)"
        ]
      },
      "fileTriggers": {
        "paths": ["scripts/*", "**/*.py", "**/pyproject.toml"]
      },
      "contentTriggers": {
        "patterns": [
          "@pytest",
          "from typing import"
        ]
      }
    },
    "just-automation-practices": {
